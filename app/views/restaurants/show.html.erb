<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<div>
  <%# if policy(@restaurant).edit? %>
    <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant), class: "btn btn-sm btn-info" %> |
    
  <%# end %>
  <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-sm btn-primary" %>
  <%= button_to "Destroy this restaurant", @restaurant, class: "btn btn-sm btn-danger", method: :delete if policy(@restaurant).destroy? %>
  
</div>
